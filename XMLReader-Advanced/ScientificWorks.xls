<?xml version="1.0" encoding="utf-8"?>
<xsl:stylesheet version="1.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform">
	<xsl:output method="html"/>
	<xsl:template match="/">
		<html>
			<body>
				<table border="1">
					<tr>
						<th>Назва роботи</th>
						<th>Факультет</th>
						<th>Кафедра</th>
						<th>Галузь</th>
						<th>Лабораторія</th>
						<th>Автори</th>
						<th>Замовник</th>
					</tr>
					<xsl:for-each select="ScientificWorks/Work">
						<tr>
							<td><xsl:value-of select="@WorkTitle"/></td>
							<td><xsl:value-of select="@Faculty"/></td>
							<td><xsl:value-of select="@Department"/></td>
							<td><xsl:value-of select="@Field"/></td>
							<td><xsl:value-of select="Lab"/></td>
							<td>
								<xsl:for-each select="Authors/Author">
									<xsl:value-of select="@FullName"/> (<xsl:value-of select="@Position"/>)<br/>
								</xsl:for-each>
							</td>
							<td>
								<xsl:value-of select="Client/@Name"/> (<xsl:value-of select="Client/@Address"/>)
							</td>
						</tr>
					</xsl:for-each>
				</table>
			</body>
		</html>
	</xsl:template>
</xsl:stylesheet>